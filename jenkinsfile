pipeline {
    agent any
    environment {
        DOCKER_IMAGE_NAME = 'calci_pro'
        GITHUB_REPO_URL = 'https://github.com/ziyak8856/calci_pro.git'
        MAVEN_HOME = '/usr/bin/mvn'

    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from GitHub repository
                    git branch: 'master', url: "${env.GITHUB_REPO_URL}"
                }
            }
        }
        stage('Maven Build') {
                    steps {
                        script {
                            env.PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
                            sh 'mvn clean install'
                        }
                    }
                }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh 'echo  docker buildx build -t calci_pro .'
                }
            }
        }
        stage('Push Docker Images') {
            steps {
                script {

                    // Tag and push Docker image to Docker Hub using id pass
                    // Authenticate with Docker Hub using credentials
                                       withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'ziyak8856532', passwordVariable: 'Ziya\@8856')]) {
                                           // Tag and push Docker image to Docker Hub
                                           sh "docker tag calci_pro ${ziyak8856532}/calci_pro:latest"
                                           sh "docker login -u ${ziyak8856532} -p ${Ziya\@8856}"
                                           sh "docker push ${ziyak8856532}/calci_pro:latest"

                }
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                script {
                    // Run Ansible playbook
                    sh "/usr/bin/ansible-playbook -i inventory deploy.yml"
                }
            }
        }
    }
}

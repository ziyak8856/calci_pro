pipeline {
    agent any
    environment {
        DOCKER_IMAGE_NAME = 'calci_pro'
        GITHUB_REPO_URL = 'https://github.com/ziyak8856/calci_pro.git'
        MAVEN_HOME = '/usr/bin/mvn'

    }
    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from GitHub repository
                    git branch: 'master', url: "${env.GITHUB_REPO_URL}"
                }
            }
        }
        stage('Maven Build') {
                    steps {
                        script {
                            env.PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
                            sh 'mvn clean install'
                        }
                    }
                }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh 'echo  docker buildx build -t calci_pro .'
                }
            }
        }
        stage('Push Docker Images') {
            steps {
                script {

                     sh "echo docker tag calci_pro ziyak8856532/calci_pro:latest"
                     sh "echo  -S docker push ziyak8856532/calci_pro:latest"
                }
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                script {
                    // Run Ansible playbook
                   sh "echo your_password | sudo -S ansible-playbook -i inventory deploy.yml
"
                }
            }
        }
    }
}

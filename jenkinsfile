pipeline {
    agent any

    environment {
        DOCKER_IMAGE_NAME = 'calci_pro'
        GITHUB_REPO_URL = 'https://github.com/ziyak8856/calci_pro.git'
        MAVEN_HOME = '/usr/bin/mvn'
        // Credentials ID for Docker Hub authentication
        DOCKER_HUB_CREDENTIALS_ID = 'Ziya' // Replace with your actual ID
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout code from GitHub repository
                    git branch: 'master', url: "${env.GITHUB_REPO_URL}"
                }
            }
        }
        stage('Maven Build') {
            steps {
                script {
                    env.PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
                    sh 'mvn clean install'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    sh "docker build -t ${env.DOCKER_IMAGE_NAME} ."
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    // Authenticate to Docker Hub with secure credentials (replace with actual code)
                    withCredentials([usernamePassword(credentialsId: "${env.DOCKER_HUB_CREDENTIALS_ID}", usernameVariable: 'Ziya', passwordVariable: '12345')]) {
                        sh "docker login -u $USERNAME -p $PASSWORD" // Replace with secure credential access steps
                    }

                    // Tag Docker image
                    sh "docker tag ${env.DOCKER_IMAGE_NAME} ziyak8856532/${env.DOCKER_IMAGE_NAME}:latest"

                    // Push Docker image using credentials
                    sh "docker push ziyak8856532/${env.DOCKER_USERNAME}:latest"
                }
            }
        }
        stage('Run Ansible Playbook') {
            steps {
                script {
                    // Prompt for sudo password instead of hardcoding (security risk)
                    sh """
                    read -p "Enter sudo password (will not be displayed): " PASSWORD
                    echo -n "\${PASSWORD}" | sudo -S ansible-playbook -i inventory deploy.yml
                    """
                }
            }
        }
    }
}
